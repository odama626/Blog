doctype html
html
  head
    title #{site.name}

    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700", type="text/css")
    link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")
    link(rel="stylesheet", href="https://code.getmdl.io/1.2.1/material.indigo-pink.min.css")
    link(rel="stylesheet", href="css/baseStyles.css")
    meta(name="viewport", content="initial-scale=1.0, user-scalable=no")
    meta(charset="utf-8")
    block cssLinks
  body
    .mdl-layout.mdl-js-layout
      header.mdl-layout__header
        .mdl-layout-icon
        .mdl-layout__header-row
          span.mdl-layout__title(onClick="location='/'") #{site.name}
          .mdl-layout-spacer
          nav.mdl-navigation
            block navBar
      #layout-drawer.mdl-layout__drawer
        span.mdl-layout__title(onClick="location='/'") #{site.name}
        nav.mdl-navigation
          block navMenu
          a.mdl-navigation__link(href="/about") About
      main.mdl-layout__content.background
        block mainContent

      footer.mdl-mini-footer
        .mdl-mini-footer__left-section
          .mdl--logo #{site.name}
        .mdl-mini-footer__right-section
          ul.mdl-mini-footer__link-list
            li: a(href="#") Help
            li: a(href="#") Privacy &amp; Terms

    script(defer, src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js")
    script(defer, src="https://code.getmdl.io/1.2.0/material.min.js")
    script(defer. src="/reload/reload.js")
    block jsLibs
